<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomStudentPicker.Views.DrawRandomStudentPage"
             Title="Random Student Drawing Page">
    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/DrawRandomStudentPageStyle.css" />
    </ContentPage.Resources>
    <FlexLayout x:Name="MainLayout">
        <Label Text="Click the button to draw a student"/>
        <Label x:Name="DrawedStudentLabel"/>
        <Button BackgroundColor="#315152"
                TextColor="whitesmoke"
                Text="Draw a student"
                Clicked="DrawStudentButton_Clicked"/>
    </FlexLayout>
</ContentPage>